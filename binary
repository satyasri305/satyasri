#include<iostream>
using namespace std;
int main()
{

int n,len=0,maxlen=0;
cin>>n;
int arr1[n];
int arr2[n];
for(int i=0;i<n;i++)
  cin>>arr1[i];
for(int i=0;i<n;i++)
  cin>>arr2[i];
for(int i=0;i<n;i++)
 {
 	int sum1=0,sum2=0;
 	for(int j=i;j<n;j++)
 	{
 		sum1+=arr1[j];
 		sum2+=arr2[j];
 		if(sum1==sum2)
 		{
 			len=j-i+1;
		 }
		 if(len>maxlen)
		   maxlen=len;
		 
	 }
 }   
	 cout<<maxlen; 
}
